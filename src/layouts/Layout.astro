---
import { ViewTransitions } from 'astro:transitions';
import { Icon } from 'astro-icon/components'
import Player from '../components/react/Player';
import Nav from '../components/react/nav';
interface Props {
	title: string;
}

const { title } = Astro.props;
const backButtonVisible = Astro.url.pathname != '/';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Pinyon+Script&family=EB+Garamond:ital,wght@0,400;0,700;1,400;1,700&family=Roboto:ital,wght@0,100;0,400;0,700;1,100;1,400;1,700&family=Quattrocento&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<Nav></Nav>
	<body>
		{backButtonVisible && <a onclick="history.back()" class="top-14 left-2 z-10 w-12 h-12 fixed">
				<Icon name="mdi:chevron-left" class="h-full w-full text-white"></Icon>
			</a>}
		<slot />
		<!-- <footer class="bg-white border-t-2 border-t-slate-400">
			<span class="flex justify-center">Kyle & Jasmine's wedding site</span>
		</footer> -->
		<div id="audio-player">
			<Player client:load transition:persist="player" />
		</div>
	</body>
	
</html>
<style is:global>
	:root {
		--accent: 215, 187, 152, 1;
		--accent-light: 215, 187, 152, 0.2;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			rgba(var(--accent)),
			rgba(var(--accent-light)) 80%,
			white
		);
		--tan: #D7BB98;
		--lightgreen: #698c6d;
		--peach: #d4938b;
		--darkgreen: #024c3c;
	}
	html {
		font-family: 'eb garamond';
		background: var(--accent-gradient);
		min-height: 100vh;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	h1 {
		font-family: 'Quattrocento';
		font-size: 3rem;
		font-weight: 400;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	h2 {
		font-size: 3rem;
		font-weight: 500;
		line-height: 1;
		margin-bottom: 1em;
	}

	a {
		transition: all 0.2s;
		cursor: pointer;
	}

	a:hover {
		text-decoration: underline;
	}

	/* a:visited {
		color: var(--darkgreen);
	} */

	.font-dancing {
		font-family: 'Pinyon Script';
	}

	nav {
		background-color: rgb(var(--accent));
	}
</style>