---
import { ViewTransitions } from 'astro:transitions';
import Player from '../components/react/Player';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@700&family=Roboto:ital,wght@0,100;0,400;0,700;1,100;1,400;1,700&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<slot />
		<footer class="bg-white border-t-2 border-t-slate-400">
			<span class="flex justify-center">Kyle & Jasmine's wedding site</span>
		</footer>
		<div id="audio-player">
			<Player client:load transition:persist="player" />
		  </div>
	</body>
	
</html>
<style is:global>
	:root {
		--accent: 215, 187, 152, 1;
		--accent-light: 215, 187, 152, 0.2;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			rgba(var(--accent)),
			rgba(var(--accent-light)) 80%,
			white
		);
	}
	html {
		font-family: 'Roboto', sans-serif;
		background: var(--accent-gradient);
		background-size: 224px;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	h1 {
		font-family: 'Dancing Script', cursive;
	}
</style>