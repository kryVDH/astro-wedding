---
import { Image, getImage } from 'astro:assets';
import Layout from '../layouts/Layout.astro';
import bgImage from '../photos/hands.jpg';
import terminus from '../photos/hotels/terminus.jpg';
import international from '../photos/hotels/international.jpg';
import bdalemotel from '../photos/hotels/bdalemotel.png';
import mitchellonmain from '../photos/hotels/mitchellonmain.jpg';

const optimizedBackgroundImage = await getImage({ src: bgImage, width: 1000 })
---

<Layout title='Hotels'>
    <main class="min-h-screen mt-14">
        <div class="flex flex-col items-center pt-12 parallax relative px-4" style={`background-image: url(${optimizedBackgroundImage.src})`}>
            <div class="h-full w-full opacity-70 absolute top-0 bg-white"></div>
            <h1 class="mx-auto text-center z-10" style="font-family: 'WindSong';" transition:name="hotels-transition">Hotels</h1>
            <dl class="flex flex-col gap-6 justify-center faq mb-32 z-10">
                <div class="flex flex-col align justify-center">
                    <dt>The Grand Terminus Hotel</dt>
                    <dd>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 hotels-grid mt-4">
                            <div class="flex flex-col justify-center md:items-end">
                                <a class="font-bold">98 Macleod Street Bairnsdale VIC 3875</a>
                                <a class="font-bold" href="tel:0351524040">03 5152 4040</a>
                                <a class="font-bold" href="https://www.grandterminus.com.au/">https://www.grandterminus.com.au/</a>
                            </div>
                            <Image class="border-black border-2 border-solid" width={500} src={terminus} loading={'eager'} alt="Grand terminus hotel" style="box-shadow: 4px 4px 10px 4px #555;"></Image>
                        </div>
                    </dd>
                    <div class="home-border mt-16 mb-16"></div>
                    <dt>Bairnsdale International</dt>
                    <dd>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 hotels-grid mt-4">
                            <div class="flex flex-col-reverse md:contents gap-8">
                                <Image class="border-black border-2 border-solid" width={500} src={international} loading={'lazy'} alt="Grand terminus hotel" style="box-shadow: 4px 4px 10px 4px #555;"></Image>
                                <div class="flex flex-col justify-center md:items-start">
                                    <a class="font-bold">355 Main street, Bairnsdale VIC 3875</a>
                                    <a class="font-bold" href="tel:0351528300">03 5152 8300</a>
                                    <a class="font-bold" href="https://www.bairnsdaleinternational.com.au/">https://www.bairnsdaleinternational.com.au/</a>
                                </div>
                            </div>
                        </div>
                    </dd>
                    <div class="home-border mt-16 mb-16"></div>
                    <dt>Bairnsdale Motel</dt>
                    <dd>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 hotels-grid mt-4">
                            <div class="flex flex-col justify-center md:items-end">
                                <a class="font-bold">42 Great Alpine Road, Bairnsdale VIC 3875</a>
                                <a class="font-bold" href="tel:0351521933">03 5152 1933</a>
                                <a class="font-bold" href="https://bairnsdalemotel.com.au/">https://bairnsdalemotel.com.au/</a>
                            </div>
                            <Image class="border-black border-2 border-solid" width={500} src={bdalemotel} loading={'lazy'} alt="Grand terminus hotel" style="box-shadow: 4px 4px 10px 4px #555;"></Image>
                        </div>
                    </dd>
                    <div class="home-border mt-16 mb-16"></div>
                    <dt>Mitchell on Main</dt>
                    <dd>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 hotels-grid mt-4">
                            <div class="flex flex-col-reverse md:contents gap-8">
                                <Image class="border-black border-2 border-solid" width={500} src={mitchellonmain} loading={'lazy'} alt="Grand terminus hotel" style="box-shadow: 4px 4px 10px 4px #555;"></Image>
                                <div class="flex flex-col justify-center md:items-start">
                                    <a class="font-bold">291-295  Main Street, Bairnsdale VIC 3875</a>
                                    <a class="font-bold" href="tel:0351525012">03 5152 5012</a>
                                    <a class="font-bold" href="https://www.mitchellonmain.com.au/">https://www.mitchellonmain.com.au/</a>
                                </div>
                            </div>
                        </div>
                    </dd>
                    <div class="home-border mt-16 z-10"></div>
                </div>
            </dl>
        </div>
    </main>
</Layout>